<odoo>
    <data noupdate="0">
        <record id="mail_template_backorder" model="mail.template">
            <field name="name">Backorder: Send by Email</field>
            <field name="email_from">{{ object.company_id.email_formatted or object.user_id.email_formatted }}</field>
            <field name="subject">Order {{ object.name }} contains backorder items</field>
            <!--            <field name="partner_to">${object.employee_id.address_home_id.id}</field>-->
            <field name="email_to">reham@kaneen.com, amal@kaneen.com</field>
            <field name="model_id" ref="sale.model_sale_order"/>
            <field name="auto_delete" eval="True"/>
            <field name="lang">{{ object.partner_id.lang }}</field>
            <field name="body_html" type="html">
                <div style="font-family: 'Lucida Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                    <p>Hello Category Team,</p>
                    <br/>
                    <p>Please find attached
                        <i><t t-out="object.name"/></i>
                    </p>
                    <p>If you have any question, do not hesitate to contact Haris Shah.</p>
                    <br/>
                    <p>Best Regards,</p>
                    <p><t t-out="object.company_id.name"/></p>
                </div>
            </field>
        </record>
    </data>

</odoo>