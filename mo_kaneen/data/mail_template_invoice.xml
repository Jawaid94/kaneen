<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mo_mail_template_invoice_confirm" model="mail.template">
            <field name="name">Invoice: Send by email custom</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="subject">Tax Invoice from Kaneen</field>
            <!--            <field name="email_from">{{ (object.invoice_user_id.email_formatted or user.email_formatted) }}</field> jawaid 7/12/2023-->
            <field name="email_from">{{ object.company_id.email_formatted }}</field>
            <field name="email_to">{{ object.partner_id.email_formatted }}</field>
            <field name="body_html" type="html">
                <table class="wrapper" width="100%"
                       style="border-collapse:collapse;margin:0 auto; background-color: #f5f5f5">
                    <tbody>
                        <tr>
                            <td class="wrapper-inner" align="center"
                                style="font-family:'hacenMaghreb', 'Helvetica Neue', Helvetica, Arial, sans-serif;vertical-align:top;width:100%;">
                                <table class="main" align="center"
                                       style="border-collapse:collapse;margin:0 auto;text-align:left;width:600px; background-color: #f5f5f5">
                                    <tbody>
                                        <tr>
                                            <td class="header"
                                                style="font-family:'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;vertical-align:top;padding:10px 10px 0;text-align:center;">
                                                <a class="logo" href="https://kaneen.com/"
                                                   style="color:#1979c3;text-decoration:none;">
                                                    <img width="200" height="80"
                                                         src="https://kaneen.com/media/logo/stores/4/Kaneen_Logo-02_1_.png"
                                                         alt="logo" border="0"
                                                         style="border:0;height:auto;line-height:100%;text-decoration:none;"/>
                                                </a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td class="main-content"
                                                style="font-family:'Open Sans', 'Helvetica Neue', Helvetica, Arial, sans-serif;vertical-align:top;background-color:#f5f5f5;padding:10px;">


                                                <div style="margin-top:10px;font-weight:bold;text-align:center;font-family:sans-serif;">
                                                    <h3 style="font-weight:300;line-height:1.1;font-size:18px;margin-top:15px;margin-bottom:10px;padding:10px;background-color:#d5897c;">
                                                        INVOICE NOTIFICATION EMAIL
                                                    </h3>
                                                </div>

                                                <div style="margin: 0px; padding: 0px;margin-top:30px">
                                                    <p style="box-sizing:border-box;margin: 0px; padding: 0px; font-size: 13px;">
                                                        Dear
                                                        <t t-out="object.partner_id.name or ''"/>,
                                                        <br/>
                                                        <br/>
                                                        Thank you for shopping at Kaneen

                                                        <br/>
                                                        <br/>
                                                        Please find attached your Tax Invoice
                                                        <br/>
                                                        <br/>

                                                        Invoice Number:
                                                        <t t-out="object.name"/>
                                                        <br/>
                                                        Reference Number:
                                                        <t t-out="object.invoice_origin"/>
                                                        <br/>
                                                        Invoice Date:
                                                        <t t-out="format_date(object.invoice_date)"/>
                                                        <br/>
                                                        Grand Total (Incl. Tax):
                                                        <t t-out="format_amount(object.amount_total, object.currency_id)"/>

                                                        <br/>
                                                        <br/>

                                                        This invoice is already paid.

                                                        <br/>
                                                        <br/>

                                                        For all your inquiries please feel free to call us on 9200 06204
                                                        or contact us on
                                                        <br/>
                                                        <t t-out="object.company_id.customer_service_email"/>

                                                        <br/>
                                                        <br/>

                                                        See you soon!

                                                        <br/>
                                                        <br/>

                                                        Kaneen Team
                                                    </p>
                                                </div>

                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </td>
                        </tr>
                    </tbody>
                </table>


                <div>
                    <hr style="height:2px;background-color:#d5897c;"/>
                    <div style="background-color:#38245f;">
                        <div style="text-align:center;padding:15px;">
                            <p style="color:#fff;">join us on social media</p>
                            <div>
                                <a style="margin-right:0.5em;"
                                   href="https://www.linkedin.com/company/kaneen-investment/">
                                    <img src="https://kaneen.com/media/wysiwyg/email/social-icons/linkedin.png" height="20" width="20"
                                         alt="linkedin.png"/>
                                </a>
                                <a style="margin-right:0.5em;" href="https://twitter.com/kaneenksa">
                                    <img src="https://kaneen.com/media/wysiwyg/email/social-icons/twitter_icon_x.png" height="20" width="20"
                                         alt="twitter.png"/>
                                </a>
                                <a style="margin-right:0.5em;" href="https://www.tiktok.com/@kaneenksa">
                                    <img src="https://kaneen.com/media/wysiwyg/email/social-icons/tiktok.png" height="20" width="20"
                                         alt="tiktok.png"/>
                                </a>
                                <a style="margin-right:0.5em;" href="https://instagram.com/kaneenksa" title="Instagram">
                                    <img src="https://kaneen.com/media/wysiwyg/email/social-icons/instagram.png" height="20" width="20"
                                         alt="instagram.png"/>
                                </a>
                            </div>
                            <div style="margin-top:10px;">
                                <img src="https://kaneen.com/media/wysiwyg/email/social-icons/kaneen.png" height="20" width="20"
                                     alt="kaneen.png"/>
                            </div>
                        </div>
                    </div>
                </div>

            </field>
            <field name="report_template" ref="lbs_report_invoice_custom_document_action"/>
            <field name="report_name">Invoice_{{ (object.name or '').replace('/','_') }}</field>
            <field name="lang">{{ object.partner_id.lang or 'ar_001' }}</field>
            <field name="auto_delete" eval="True"/>
        </record>
    </data>
</odoo>