<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_stock_picking_inherit_form_view" model="ir.ui.view">
        <field name="name">stock.picking.inherit.form.view</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="replace">
                <button name="sh_cancel" string="Cancel" type="object"
                        groups="sh_all_in_one_cancel_adv.group_sh_stock_cancel"
                        attrs="{'invisible':[('state','=','cancel')]}"/>
            </button>
        </field>
    </record>

    <record id="view_sale_order_cancel" model="ir.ui.view">
        <field name="name">Reason for the cancellation</field>
        <field name="model">sale.order.cancel</field>
        <field name="inherit_id" ref="sale.sale_order_cancel_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//footer" position="before">
                <br/>
                <p>
                    Choose the reason for the cancellation of the
                    sale order.
                </p>
                <group>
                    <field name="cancel_reason"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>