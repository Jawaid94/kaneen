<odoo>
    <record id='sh_create_project_form' model='ir.ui.view'>
        <field name="name">sh.create.project.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="sh_creds_id"/>
                <field name="export_to_trello"/>
                <field name="task_sync_all" attrs="{'invisible' : [('export_to_trello', '=', False)]}"/>
                <field name="task_sync_specific" attrs="{'invisible' : [('export_to_trello', '=', False)]}"/>
            </field>
        </field>
    </record>
    <record id='sh_create_project_wizard_form' model='ir.ui.view'>
        <field name="name">sh.create.project.wizard.form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form_simplified_footer"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="sh_creds_id"/>
                <field name="export_to_trello"/>
                <field name="task_sync_all" attrs="{'invisible' : [('export_to_trello', '=', False)]}"/>
                <field name="task_sync_specific" attrs="{'invisible' : [('export_to_trello', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>