<odoo>
    <record id='sh_trello_task_form' model='ir.ui.view'>
        <field name="name">sh.trello.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="card_creation" readonly="True"/>
                <field name="last_comment_done" readonly="True"/>
                <field name="task_sync_specific" invisible="True"/>
                <field name="specific_export" attrs="{'invisible' : [('task_sync_specific', '=', False)]}"/>
            </field>
        </field>
    </record>
</odoo>