<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='sh_trello_logger_tree' model='ir.ui.view'>
        <field name="name">sh.trello.logger.tree</field>
        <field name="model">sh.trello.log</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="error"/>
                <field name="datetime"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="sh_trello_log_action" model="ir.actions.act_window">
        <field name="name">Logger</field>
        <field name="res_model">sh.trello.log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Logger
            </p>
        </field>
    </record>

    <menuitem name="Logger" action="sh_trello_log_action" id="sh_trello_logger_item" parent="sh_trello_connector_base"
              sequence="2"/>
</odoo>